{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**",
      "!**/.next",
      "!**/dist",
      "!**/.turbo",
      "!**/dev-dist",
      "!**/.zed",
      "!**/.vscode",
      "!**/routeTree.gen.ts",
      "!**/src-tauri",
      "!**/.nuxt",
      "!bts.jsonc",
      "!**/.expo",
      "!**/.wrangler",
      "!**/.alchemy",
      "!**/.svelte-kit",
      "!**/wrangler.jsonc",
      "!**/.source",
      "!apps/my-boylerplate"
    ]
  },
  "extends": ["ultracite"],
  "linter": {
    "rules": {
      "style": {
        "noNestedTernary": "off",
        "noMagicNumbers": "off",
        "noNonNullAssertion": "off",
        "useFilenamingConvention": "off"
      },
      "suspicious": {
        "noArrayIndexKey": "off",
        "noUnknownAtRules": "off"
      },
      "nursery": {
        "noNonNullAssertedOptionalChain": "off"
      },
      "a11y": {
        "useSemanticElements": "off",
        "noSvgWithoutTitle": "off"
      }
    }
  }
}
